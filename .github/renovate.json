{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergePatch",
    ":disableRateLimiting",
    ":gitSignOff",
    ":semanticCommits"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "django packages",
      "matchDatasources": ["pypi"],
      "matchPackageNames": [
        "django",
        "django-ninja",
        "django-stubs",
        "django-stubs-ext",
        "djangorestframework",
        "djangorestframework-stubs"
      ]
    },
    {
      "matchManagers": ["github-actions"],
      "minimumReleaseAge": "3 days",
      "addLabels": ["github_actions"],
      "automerge": false
    }
  ],
  "rangeStrategy": "bump",
  "schedule": ["* 0-4 * * *"],
  "timezone": "Asia/Tokyo"
}
